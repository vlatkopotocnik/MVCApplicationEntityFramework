@using MetroAPP.Models.Korisnik
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.95">
    <meta name="description" content="LearningApplication">
    <meta name="author" content="Vlatko Potočnik">
    <title>@ViewBag.Title</title>

    <!-- core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/animate.min.css" rel="stylesheet">
    <link href="~/Content/prettyPhoto.css" rel="stylesheet">
    <link href="~/Content/main.css" rel="stylesheet">
    <link href="~/Content/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="~/Scripts/html5shiv.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="~/Images/Naslovnica/Header/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Images/Header/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Images/Header/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Images/Header/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Images/Header/apple-touch-icon-57-precomposed.png">
</head><!--/head-->
<body class="homepage">
    <header id="header">
        <div class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-xs-4">
                    </div>
                    <div class="col-sm-6 col-xs-8">
                        <div class="navbar-right">
                            @if (Session["Korisnik"] == null)
                            {
                                <span> @Html.ActionLink("Login", "Index", "LogInOut")  |  @Html.ActionLink("Register", "Register", "LogInOut")  </span>
                            }
                            else
                            {
                                <span style="color: #a9a9a9">Welcome @Session["User"],</span>
                                <span> @Html.ActionLink(" logout", "Logout", "LogInOut") </span>
                            }
                            <div class="search">
                                <form role="form"></form>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/.container-->
        </div><!--/.top-bar-->
        <nav class="navbar navbar-inverse" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <h2>@Html.ActionLink("AUDIO - TECHNICA", "Index", "Naslovnica") </h2>
                </div>
                <div class="collapse navbar-collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("HOME", "Index", "Naslovnica") </li>
                        <li>@Html.ActionLink("PRODUCTS", "Index", "Proizvodi")</li>
                        <li>@Html.ActionLink("BLOG", "Index", "Blog")</li>
                        <li>@Html.ActionLink("GALLERY", "Index", "Galerija")</li>
                        <li>@Html.ActionLink("CONTACT", "Index", "Kontakt")</li>
                    </ul>
                </div>
            </div><!--/.container-->
        </nav><!--/nav-->

    </header><!--/header-->
    <div>
        @RenderBody()
    </div>

    <footer id="footer" class="midnight-blue">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Subscribe to our newsletter</h2>
                    <a>If you want to get more informations about new products, just subscribe to ours newsletter, We won't spam </a>
                </div>
                <div class="col-sm-6">
                    <ul class="pull-right">
                        <li>
                            @using (Html.BeginForm("SendMail", "Naslovnica", FormMethod.Post))
                            {
                                @Html.TextBox("email", "", new { placeholder = "Enter your email here" })
                                <input type="submit" value="SUBMIT" class="btn-primary" />
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer><!--/#footer-->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.prettyPhoto.js"></script>
    <script src="~/Scripts/jquery.isotope.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/wow.min.js"></script>
</body>
</html>

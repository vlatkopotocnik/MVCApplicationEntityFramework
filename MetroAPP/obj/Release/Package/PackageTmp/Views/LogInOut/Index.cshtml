@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="text-primary" style="padding-left: 100px;">
    <h2 style="padding-top: 20px;">Login</h2>
    @using (Html.BeginForm("Index", "LogInOut", FormMethod.Post))
    {
        <div class="form-group" style="width: 20%">
            <div class="form-group">
                <label>Username:</label>
                @Html.TextBox("username", "", new { @class = "form-control", style = "border-color: #000000" })
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.Password("password", "", new { @class = "form-control", style = "border-color: #000000" })
            </div>
            <div class="form-group" style="padding-bottom: 50px;">
                <button type="submit" name="submit" class="btn btn-primary btn-lg" required="required">Login</button>
            </div>
        </div>
    }
</div>
